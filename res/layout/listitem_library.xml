<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lstitm_lib"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:gravity="center_horizontal">
    
    <ImageView android:id="@+id/imgCover"
        android:contentDescription="@string/image_cover"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="0dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="false"/>
    
    <RelativeLayout
	    android:background="#aa000000"
	    android:layout_height="30dp"
	    android:layout_width="match_parent"
	    android:layout_alignParentTop="true">
		
		<TextView
        android:id="@+id/issueNumber"
        android:layout_width="80dp"
        android:textSize="15sp"
        android:textColor="#e6e6e6"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="3dp"
	    android:layout_marginLeft="5dp" />
		
		<sage.ui.ProgressCircle android:id="@+id/pcProgress"
		    android:layout_alignParentRight="true"
		    android:layout_centerInParent="true"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	        android:layout_marginTop="0dp"
	        android:layout_marginRight="5dp"/>
	</RelativeLayout>

	<TextView android:id="@+id/lblTitle"
		    android:background="#aa000000"
	    	android:layout_height="40dp"
	        android:layout_width="match_parent"
	        android:textSize="15sp"
	        android:textColor="#e6e6e6"
	        android:text=""
	        android:layout_alignParentBottom="true" />    
		
</RelativeLayout>